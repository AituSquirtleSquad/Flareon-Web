<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/footer.css">
    <link rel="stylesheet" href="~/css/register.css">
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" type="text/css" href="~/webjars/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <title>@ViewData["Title"] - FlareonWeb</title>

</head>
<body>

    <nav>
        <div class="logo">
            <a href="@Url.Action("Index", "Home")"><img src="https://cdn.logo.com/hotlink-ok/logo-social.png" alt="Logo Image"></a>
        </div>

        <div class="hamburger">
            <div class="bars1"></div>
            <div class="bars2"></div>
            <div class="bars3"></div>
        </div>

        <ul class="nav-links">
            <li><a href="#"></a></li>
            <li><a href="#"></a></li>
            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li><a href="@Url.Action("Privacy", "Home")">Privacy</a></li>
            @{
                if (User.Identity.IsAuthenticated)
                {
                    <partial name="_LoginPartial.cshtml" />
                }
                <!--else
        {
            <li><a href="/identity/account/login">Login</a></li>
            <li><a href="/identity/account/register">Register</a></li>
        }-->


            }
            @{
                if (!User.Identity.IsAuthenticated)
                {
                    <!--<li><button class="login-button" data-toggle="modal" data-target="#myModal" href="#">Sign In</button></li>-->
                    <li style="display:flex; align-items: center">
                        <form style="padding: 0; margin: 0; width: 10%; height: 10%;" id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div>
                                <p>
                                    @foreach (var provider in Model.ExternalLogins)
                                    {
                                        <button type="submit" class="login-button" style="width: 200px; margin-top: 17px" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"> <img src="https://img.icons8.com/color/16/000000/google-logo.png"> Login With @provider.DisplayName</button>
                                    }
                                </p>
                            </div>
                        </form>
                    </li>
                }
            }
        </ul>
    </nav>

    <div style="width: 100%;border:1px solid red; height: 700px;">
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="footer-col">
                    <h4>flareon</h4>
                    <ul>
                        <li><a href="#">about us</a></li>
                        <li><a href="#">our services</a></li>
                        <li><a href="#">privacy policy</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>get help</h4>
                    <ul>
                        <li><a href="#">FAQ</a></li>
                        <li><a href="#">returns</a></li>
                        <li><a href="#">order status</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>Events</h4>
                    <ul>
                        <li><a href="#">Movie</a></li>
                        <li><a href="#">Spectacle</a></li>

                    </ul>
                </div>
                <div class="footer-col">
                    <h4>follow us</h4>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/js/header.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>