@model IEnumerable<FlareonWeb.Models.Cinema>

@{
    ViewData["Title"] = "CinemaIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CinemaIndex</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CinemaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CinemaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CinemaCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CinemaAddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CinemaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CinemaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CinemaCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CinemaAddress)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CinemaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CinemaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CinemaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
